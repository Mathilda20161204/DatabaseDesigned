-- ----------------------------
-- Table structure for 'student_info'
-- 学生信息表
-- ----------------------------
CREATE TABLE student_info(
  stu_id varchar(5) NOT NULL,
  stu_name varchar(30) NOT NULL,
  stu_grade varchar(30) DEFAULT null,
  stu_sex varchar(4) DEFAULT '男' check(stu_sex in('男','女')),
  stu_major varchar(100) NOT NULL,
  stu_class varchar(100) DEFAULT NULL,
  stu_academy varchar(100) DEFAULT NULL,
  stu_phone varchar(20) DEFAULT NULL,
  stu_email varchar(50) DEFAULT NULL,
  stu_pwd varchar(200) DEFAULT 654321,
  PRIMARY KEY (stu_id)，
  constraint con_stu_class_major_grade foreign key (stu_grade,stu_major,stu_class,stu_academy) references class_info(class_grade,class_major,class_name,class_academy) ON DELETE CASCADE DEFERRABLE
);

