-- ----------------------------
-- 分组信息表
-- ----------------------------
CREATE TABLE team_info (
  team_id varchar(10) NOT NULL,
  team_name varchar(50) not NULL,
  team_report_status varchar(10) default '未提交' check(team_report_status  in('提交','未提交')),
  PRIMARY KEY (Team_id)
);
